<div class="row">
    <div class="user_profile col-4">
    <%= render "share/avatar", user: user %>
      <br>
      <p>@<%= user.username %></p>
      <p><%= user.full_name %></p>
      <p><%= user.city %>,<%= user.state %></p>
      <br><br>
      <p><%= user.bio %></p>
    </div>
    <div class="message_list col-8">
      <% if current_user == user %>
        <%= form_for message do |form| %>
          <%= form.text_area :body %>
          <%= form.submit "Post it!", class: "btn btn-primary float-right" %>
        <% end  %>
      <% end %>
      <% user.messages.each do |messages| %>
        <div class="message">
          <%= image_tag "default_user.png" %>
          <p><%= messages.body %></p>
          <div class="message-date">
            <p><%= time_ago_in_words(messages.created_at) %></p>
          </div>
        </div>
      <% end  %>
    </div>
</div>
